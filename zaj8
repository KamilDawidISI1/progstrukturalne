zad0

#include <stdio.h>
#include <stdlib.h>

int main()
{
    printf("%d\n",sizeof(char));
    printf("%d\n",sizeof(wchar_t));
    printf("%d\n",'a');
    printf("%d\n",'A');
    printf("%d\n",' ');
    printf("%d\n",'1');
    printf("%d\n",'!');
    printf("%d\n",'>');

    int i;
    for(i=0;i<=127;i++){
        printf("%d, '%c'\n", i, i);
    }

    return 0;
}


zad1

#include <stdio.h>
#include <stdlib.h>

void wyczysc(char *napis){
   napis[0]=0;
   }

int main()
{


   char *napis = "pieczewo";
   printf(napis);
   printf("\n");
   printf("po wyczyszczeniu: ");
   wyczysc(napis);
   printf(napis);
   free(napis);

    return 0;
}


zad2

#include <stdio.h>
#include <stdlib.h>

int dlugosc(char *napis){
   int i=0;
    int pom=0;
   while(napis[i]!=0){
        if(napis[i]!=32){
            pom++;
            }
        i++;
   }
   return pom;
   }



int main()
{

    char *napis = "Jestem w Stegnie, na plazy. W Stegnie na plazy.";
    printf("%d\n",dlugosc(napis));

    return 0;
}


